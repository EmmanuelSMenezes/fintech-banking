  "item": [
    {
      "name": "Admin - Users",
      "item": [
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"novo-cliente@example.com\",\n  \"fullName\": \"Novo Cliente\",\n  \"document\": \"98765432100\",\n  \"phoneNumber\": \"11988888888\"\n}"
            },
            "url": {
              "raw": "http://localhost:5036/api/admin/users",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5036",
              "path": ["api", "admin", "users"]
            }
          }
        },
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5036/api/admin/users?page=1&pageSize=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5036",
              "path": ["api", "admin", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get User Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5036/api/admin/users/{{user_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5036",
              "path": ["api", "admin", "users", "{{user_id}}"]
            }
          }
        }
      ]
    },
